/* pages/recommendSong/recommendSong.wxss */
.recommendSong .header {
    position: relative;
    width: 100%;
    height: 300rpx;
}
.header image{
    width: 100%;
    height: 100%;
}
.data{
    position: absolute;
    top: 50%;
    left: 50%;
    transform: translate(-30%,-20%);
    color: #fff;
    font-size: 38rpx;
}
/* 列表区域样式 */
.listContainer {
    padding: 0 20rpx;
    position: relative;
    top: -20rpx;
    background-color: #fff;
    border-radius: 20rpx;
}
.listContainer .listHeader {
    height: 80rpx;
    line-height: 80rpx;
    /* font-size: 20rpx; */
}
.listScrollView {
    height: calc(100vh - 380rpx);
}
.more{
    float: right;
}
.scrollViewItem {
    display: flex;
    position: relative;
    margin-bottom: 20rpx;
}
.songInfo {
    display: flex;
    flex-direction: column;
    height: 80rpx;
    /* line-height: 80rpx; */
    font-size: 30rpx;
    padding-left: 20rpx;
}
.songInfo text {
    height: 40rpx;
    line-height: 40rpx;
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.scrollViewItem image {
    width: 80rpx;
    height: 80rpx;
    border-radius: 8rpx;
}
.scrollViewItem .iconfont {
    position: absolute;
    right: 0;
    width: 80rpx;
    height: 80rpx;
    line-height: 80rpx;
    text-align: right;
}

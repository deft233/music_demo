/* pages/video/video.wxss */
/* 头部搜索框 */
.header {
    display: flex;
    padding: 10rpx;
}
.header image {
    height: 60rpx;
    width: 60rpx;
}
.header .search {
    flex: auto;
    border: 1px solid #eee;
    border-radius: 10rpx;
    text-align: center;
    font-size: 36rpx;
    line-height: 60rpx;
    color: #d43c33;
}
/* 滑动区域 */
.videoInfoScroll {
    display: flex;
}
.videoInfoScroll .scrollItem {
    white-space: nowrap;
    margin: 0 20rpx;
}
.videoInfoScroll .scrollItem .checked {
    border-bottom: 1rpx solid #000;
}
/* 视频区域 */
.videoScroll {
    margin-top: 10rpx;
    width: 100%;
    height: calc(100vh - 150rpx);
}
.videoItem {
    width: 100%;
    /* height: 360rpx; */
    padding: 0 3%;
}
.videoItem video {
  width: 93.8%;
}
.comment{
  width: 93.8%;
}
.videoItem .content {
    font-size: 26rpx;
    height:80rpx;
    line-height: 80rpx;
    max-width: 500rpx;
    /* 单行文本溢出省略号替代 */
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
    /* 多行文本省略号替代 */
    

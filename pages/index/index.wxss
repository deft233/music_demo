/* pages/index/index.wxss */
/* 轮播图模块 */
.banners {
    width: 100%;
    height: 500rpx;
}
.banners image {
    width: 100%;
    /* height: 100%; */
}
/* 5个盒子模块 */
.navContain {
    display: flex;
    margin-top: 10rpx;
}
.navItem {
    display: flex;
    flex-direction: column;
    align-items: center;
    flex: 1;
}
.navItem .iconfont {
    width: 100rpx;
    height: 100rpx;
    border-radius: 50%;
    line-height: 100rpx;
    text-align: center;
    background-color: rgb(240,19,19);
    color: #fff;
    font-size: 50rpx;
    margin-bottom: 20rpx;
}
.navItem text {
    font-size: 26rpx;
}
/* 推荐歌单模块 */
.recommendContain {
    padding: 20rpx;
}
.recommendContain .header .title {
    font-size: 32rpx;
    line-height: 80rpx;
    color: #666;
}
.more {
    float: right;
    border: 1px solid #000;
    padding: 10rpx 20rpx;
    border-radius: 30rpx;
    font-size: 26rpx;
}
/* 推荐歌单滑动区域 */
scroll-view {
    display: flex;
}
.scrollRecommend .scrollRecommendImg {
    width: 200rpx;
    margin-right: 20rpx;
}
.scrollRecommend .scrollRecommendImg image {
    width: 200rpx;
    height: 200rpx;
    
    border-radius: 10rpx;
}
.scrollRecommend .scrollRecommendImg text {
    font-size: 28rpx;
    /* 单行文本省略 */
    /* white-space: nowrap;
    overflow: hidden;
    display: block;
    text-overflow: ellipsis; */
    /* 多行文本省略 */
    display: -webkit-box;
    overflow: hidden;
    -webkit-box-orient: vertical;
    -webkit-line-clamp: 2;
}
.scrollRecommend {
    padding: 20rpx;
    height: 300rpx;
}
/* 排行榜内容区域 */
.topListContain {
    height: 430rpx;
    padding: 0 20rpx;
}
.topListContain .musicItem image {
    width: 100rpx;
    height: 100rpx;
}
.topListContain .title {
    font-size: 30rpx;
    line-height: 80rpx;
    color: #666;
}
.topListContain .musicItem .count {
    width: 100rpx;
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
}
.topListContain .musicItem .musicName {
    /* width: 100rpx; */
    height: 100rpx;
    text-align: center;
    line-height: 100rpx;
    /* 单行文本溢出隐藏 */
    max-width: 400rpx;
    white-space: nowrap;
    overflow: hidden;
    text-overflow: ellipsis;
}
.topListContain .musicItem {
    display: flex;
    margin-bottom: 20rpx;
}
